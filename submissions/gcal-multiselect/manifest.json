{
    "manifest_version": 3,
    "name": "Google Calendar Event Multiselector",
    "version": "1.0",
    "description": "Select and bulk move multiple Google Calendar events.",
    "permissions": [
        "activeTab", 
        "identity", 
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*", 
        "https://calendar.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://calendar.google.com/calendar/u/*/r/week",
                "https://calendar.google.com/calendar/u/*/r/day",
                "https://calendar.google.com/calendar/u/*/r/customday"
            ],
            "js": ["content.js"]
        }
    ],
    "oauth2": {
        "client_id": "426254219480-jrr4mhr18nos1fsfjsdehlssl09sej6q.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/calendar.events"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    }
}

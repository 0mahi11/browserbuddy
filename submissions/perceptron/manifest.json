{
  "manifest_version": 3,
  "name": "Perceptron",
  "version": "1.0",
  "description": "Simulate how people with color blindness see the world.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}